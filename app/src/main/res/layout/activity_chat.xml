<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nclab.ncmultipeerchat.ChatActivity"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titleChatRoom"
        android:id="@+id/txtChatRoomTitle"
        android:textSize="60sp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtChatMsg"
        android:maxLines="1"
        android:maxLength="30"
        android:layout_below="@+id/txtChatRoomTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Name"
        android:id="@+id/txtPlayerLocal"
        android:layout_alignBaseline="@+id/txtChatRoomTitle"
        android:layout_alignBottom="@+id/txtChatRoomTitle"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="70sp"
        android:text="@string/sentto"
        android:id="@+id/btnSendTo1"
        android:background="@drawable/buttonblankblue"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/txtChatMsg"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyplayer"
        android:id="@+id/txtSendToPlayer1"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/txtChatMsg" />

    <Button
        android:layout_width="80sp"
        android:layout_height="70sp"
        android:text="@string/sentto"
        android:id="@+id/btnSendTo2"
        android:background="@drawable/buttonblankblue"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/txtChatMsg"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyplayer"
        android:id="@+id/txtSendToPlayer2"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/txtChatMsg" />

    <Button
        android:layout_width="80sp"
        android:layout_height="70sp"
        android:text="@string/sentto"
        android:id="@+id/btnSendTo3"
        android:background="@drawable/buttonblankblue"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/txtChatMsg"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyplayer"
        android:id="@+id/txtSendToPlayer3"
        android:textSize="20sp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/txtChatMsg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/line"
        android:layout_below="@+id/txtChatMsg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat History"
        android:id="@+id/txtChatHist"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@id/txtSendToPlayer1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        android:textSize="20sp"
        android:textAlignment="textStart" />

</RelativeLayout>
